{
  "name": "ThingsBoard UI Vue3",
  "image": "xin8/dev-env/node:20",
  //  "build": {
  //    "dockerfile": "Dockerfile"
  //  },
  "features": {

  },
  "workspaceFolder": "/workspace/tb-ui-vue3",
  //  "remoteUser": "node",
  "forwardPorts": [3100, 8080, 80],
  "portsAttributes": {
    "3100": {
      "label": "App",
      "onAutoForward": "openPreview"
    },
    "8080": {
      "label": "Dev Server"
    },
    "80": {
      "label": "Nginx Server"
    }
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },
  "customizations": {
    "jetbrains": {
      "backend": "IntelliJ",
      "debugging": {
        "enabled": false
      },
      "extensions": [
        "com.intellij.java"
      ]
    },
    "vscode": {
      "extensions": [
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.fixAll.stylelint": "explicit"
        },
        "typescript.preferences.importModuleSpecifier": "relative",
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[scss]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[less]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "mounts": [
    // Mount local gitconfig to container
    {
      "source": "${localEnv:HOME}/.gitconfig",
      "target": "/workspace/.gitconfig",
      "type": "bind"
    }
    // Mount local git-credentials to container
    //    {
    //      "source": "${localEnv:HOME}/.git-credentials",
    //      "target": "/workspace/.git-credentials",
    //      "type": "bind"
    //    }
  ],
  "postCreateCommand": "echo 'Dev container is ready for tb-ui-vue3 development' && mkdir -p /workspace/tb-ui-vue3/.idea/remote-dev/logs",
  "initializeCommand": "echo 'Building dev container with .devcontainer/Dockerfile...'",
  "postStartCommand": "echo 'Dev container is ready!' && find /workspace/tb-ui-vue3 -not -path '/workspace/tb-ui-vue3/.git/*' -not -path '/workspace/tb-ui-vue3/.git' -exec chmod 755 {} \\;"
}
