# ===========================================
# Docker 环境变量配置
# ===========================================
# 此文件用于 Docker 容器化部署
# 使用方法：
# docker run --env-file docker.env your-image

# 基础配置
VITE_PORT=3100
VITE_PUBLIC_PATH=/
VITE_GLOB_APP_TITLE=ThingsBoard UI Vue
VITE_GLOB_APP_SHORT_NAME=thingsboard_ui_vue

# 路由配置
VITE_ROUTE_WEB_HISTORY=true

# API 配置 - 在容器中通常需要指向外部服务
VITE_PROXY=[["/api","http://192.168.1.54:8888/api",false]]
VITE_GLOB_API_URL=
VITE_GLOB_API_URL_PREFIX=
VITE_GLOB_API_URL_WEBSOCKET=/api/ws

# 构建配置
VITE_DROP_CONSOLE=true
VITE_OUTPUT_DIR=dist
VITE_BUILD_COMPRESS=gzip
VITE_BUILD_COMPRESS_DELETE_ORIGIN_FILE=false
VITE_USE_PWA=false
VITE_LEGACY=true

# 其他配置
REPORT=false
VITE_CJS_IGNORE_WARNING=true

# Docker 特定配置
NODE_ENV=production
